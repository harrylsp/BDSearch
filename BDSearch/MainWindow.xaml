<Window x:Class="BDSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDSearch"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="1024" AllowsTransparency="True" Background="Transparent" SnapsToDevicePixels="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <TabControl Margin="10" Style="{DynamicResource TabControlInLine}" TabControl.TabStripPlacement="Left">
            <TabItem Header="查询">
                <local:SearchControl x:Name="tabSearch"/>
            </TabItem>
            <TabItem Header="帮助">
            </TabItem>
            <TabItem Header="选项卡3">
            </TabItem>
        </TabControl>
    </Grid>
</Window>
