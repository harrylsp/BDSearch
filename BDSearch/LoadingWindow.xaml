<Window x:Class="BDSearch.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDSearch"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Title="LoadingWindow" Height="200" Width="400">
    <Grid Background="{StaticResource BacgroundLinearGradientBrush}">
        <StackPanel Width="400" Margin="0" VerticalAlignment="Center">
            <hc:LoadingLine Margin="0,0,0,0" Foreground="BlueViolet" Style="{StaticResource LoadingLineLarge}" DotDiameter="10"/>
            <TextBlock Text="启动中..." HorizontalAlignment="Center" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="制作：lsp Team" FontSize="18" HorizontalAlignment="Center" Margin="0,40,0,0" FontStyle="Italic" FontFamily="Stencil" RenderTransformOrigin="0.5,0.5"/>
        </StackPanel>
    </Grid>
</Window>
